{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bleulion.treasury/schemas/BLEU_PERSONA.v1.schema.json",
  "title": "BLEU Persona Schema",
  "type": "object",
  "required": ["personaId", "name", "personaType", "account", "governance"],
  "properties": {
    "personaId": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
    "name": { "type": "string" },
    "personaType": { "type": "string", "enum": ["scribe", "oracle", "watchtower", "sovereign", "observer"] },
    "account": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" },
    "governance": {
      "type": "object",
      "required": ["votingPower", "status"],
      "properties": {
        "votingPower": { "type": "number", "minimum": 0 },
        "status": { "type": "string", "enum": ["active", "inactive", "emeritus"] },
        "delegations": {
          "type": "array",
          "items": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "uri": { "type": "string", "format": "uri" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
